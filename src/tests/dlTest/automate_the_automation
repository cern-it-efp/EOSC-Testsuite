# On completion, delete and destroy a node that is not the master
NODE_2_DELETE=$(kubectl get nodes --kubeconfig /EOSC-Testsuite/src/tests/dlTest/config | grep -v master | awk '{print $1}' | sed -n 2p)
kubectl --kubeconfig /EOSC-Testsuite/src/tests/dlTest/config delete node $NODE_2_DELETE # TODO: this is rather useless, do terraform destroy instead of kubectl delete

terraform destroy -target=opentelekomcloud_compute_instance_v2.kubenode_defaultNetwork[$INDEX]

