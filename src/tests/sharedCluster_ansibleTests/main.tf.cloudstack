provider "cloudstack" {
  config = "/home/ipelu/Desktop/exoCreds"
  profile = "cloudstack"
}
variable "pathToKey" {
  default = "/root/.ssh/id_rsa"
}
variable "template"{
  #default = "Linux CentOS 7.6 64-bit"
  default = "Linux Ubuntu 18.04 LTS 64-bit"
}
resource "cloudstack_instance" "kubenode" {
  count                = 2
  name                 = "ansiblevm-${count.index}"
  keypair              = "k_cl"
  security_group_names = ["default"]
  zone                 = "ch-gva-2"
  service_offering     = "Medium"
  template             = var.template
  root_disk_size       = 50
}
